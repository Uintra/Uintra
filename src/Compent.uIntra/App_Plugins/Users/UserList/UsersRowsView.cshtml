@inherits Umbraco.Web.Mvc.UmbracoViewPage<Uintra.Users.UserList.UsersRowsViewModel>
@using Uintra.Users.UserList
@using Uintra.Core.Extensions

@foreach (var user in Model.Users)
{
    <div data-profile="@user.ProfileUrl" data-id="@user.User.Id"
         class="users-table__row js-user-list-row @if (Model.IsLastRequest) { <text>last</text> }">
        @foreach (var column in Model.SelectedColumns)
        {
            switch (column.Type)
            {
                case ColumnType.Name:
                    {
                        <div class="users-table__cell">
                            @Html.Action("Photo", "User", new
                            {
                                user = user.User,
                                cssModificator = "avatar--group-member",
                                photoWidth = 30
                            })
                            <span class="users-table__name">@user.DisplayedName</span>
                        </div>
                    }
                    break;
                case ColumnType.Info:
                    {
                        <div class="users-table__cell">
                            <span class="users-table__text">
                                @if (!string.IsNullOrEmpty(user.Email))
                                {
                                    <span class="users-table__label">
                                        @(Html.Localize("UserList.Table.Email.lbl") + ":")
                                        @user.Email
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(user.Phone))
                                {
                                    <span class="users-table__label">
                                        @(Html.Localize("UserList.Table.Phone.lbl") + ":")
                                        @user.Phone
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(user.Department))
                                {
                                    <span class="users-table__label">
                                        @(Html.Localize("UserList.Table.Department.lbl") + ":")
                                        @user.Department
                                    </span>
                                }
                            </span>
                        </div>
                    }
                    break;
                case ColumnType.Button:
                    {
                        <div class="users-table__cell">
                            <button>Message</button>
                        </div>
                    }
                    break;
                case ColumnType.GroupRole:
                    {
                        <div class="users-table__cell">
                            @{var role = user.IsGroupAdmin ? "GroupMembers.Table.GroupAdmin.lbl" : "GroupMembers.Table.GroupMember.lbl";}
                            <span class="users-table__text">@Html.Localize(role)</span>
                        </div>
                    }
                    break;
                case ColumnType.GroupManagement:
                    <div class="users-table__cell users-table__cell--tools">
                        @if ((Model.CurrentUser.Id == user.User.Id || Model.IsCurrentUserAdmin) && !user.IsGroupAdmin)
                        {
                            <button class="users-table__delete js-user-list-delete">X</button>
                        }
                    </div>
                    break;
            }
        }
    </div>
}
