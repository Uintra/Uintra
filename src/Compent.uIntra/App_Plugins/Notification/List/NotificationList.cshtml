@using uIntra.Core.Extensions
@using uIntra.Notification.Configuration
@using uIntra.Core.User
@model uIntra.Notification.NotificationListViewModel

<ul class="notification__list" id="notification_list">
    @if (Model.Notifications.Any())
    {
        foreach (var notification in Model.Notifications)
        {
            bool hasNotifier = notification.Notifier != null;
            var icon = "";
            switch (notification.Type.Id)
            {
                case (int)NotificationTypeEnum.EventUpdated:
                    icon = "icon-lightning";
                    break;

                case (int)NotificationTypeEnum.EventHided:
                    icon = "icon-cancel";
                    break;

                case (int)NotificationTypeEnum.BeforeStart:
                    icon = "icon-time";
                    break;

                case (int)NotificationTypeEnum.CommentLikeAdded:
                case (int)NotificationTypeEnum.ActivityLikeAdded:
                    icon = "icon-like";
                    break;
                case (int)NotificationTypeEnum.CommentAdded:
                case (int)NotificationTypeEnum.CommentEdited:
                case (int)NotificationTypeEnum.CommentReplied:
                    icon = "icon-comment";
                    break;
            }
            <li data-anchor="@notification.Id" class="notification__list-item js-notification__list-item" data-href="@notification.Value.url" data-id="@notification.Id" data-viewed="@notification.IsViewed.ToString().ToLower()">
                <div class="notification__list-avatar">
                    <img class="notification__list-avatar-img" src="@UserPhotoHelper.GetUserPhotoOrDefaultAvatar(notification.Notifier?.Photo)">
                </div>
                <div class="notification__list-meta">
                    <div class="notification__list-description">
                        <div class="notification__list-row">
                            <span class="notification__list-date">@notification.Date</span>
                            <h2 class="notification__list-title">
                                <span class="notification__list-icon">
                                    <i class="icon @icon"></i>
                                </span>
                                @if (notification.Type.Id != NotificationTypeEnum.BeforeStart.ToInt())
                                {
                                    <span class="notification__list-name">@(hasNotifier ? notification.Notifier.Name : string.Empty) </span>
                                }
                                @if (notification.Type.Name.IsNotNullOrEmpty())
                                {
                                    <span class="notification__list-type">@Html.Localize(notification.Type.Name)</span>
                                }
                            </h2>
                            <div class="notification__list-heading">
                                @Html.Raw(notification.Value.message)
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    }
    else
    {
        <li class="notification__list-item _empty">@Html.Localize("Notifications.EmptyNotificationList.lbl")</li>
    }
</ul>