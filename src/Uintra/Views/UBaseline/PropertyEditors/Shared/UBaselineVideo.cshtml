@using Compent.Shared.Extensions.Bcl
@model UBaseline.Shared.VideoPicker.VideoPickerViewModel

@if (Model != null && Model.Desktop.Url.HasValue())
{
    <div>
        @if (Model.Desktop.Thumbnail.HasValue())
        {
            <img src="@Model.Desktop.Thumbnail" width="420" height="315" /><br />
        }
        <iframe width="420" height="315" src="@Model.Desktop.Url"></iframe>
    </div>
}
